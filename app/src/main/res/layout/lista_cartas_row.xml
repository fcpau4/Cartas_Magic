<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="@string/type4"
        android:layout_width="272dp"
        android:layout_height="20dp"
        android:id="@+id/typeCard"
        tools:layout_editor_absoluteX="80dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline" />

    <TextView
        android:text="@string/color4"
        android:layout_width="0dp"
        android:id="@+id/colorCard"
        app:layout_constraintRight_toRightOf="@+id/rarityCard"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintLeft_toLeftOf="@+id/rarityCard"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/rarityCard" />

    <TextView
        android:text="@string/rarity4"
        android:layout_width="272dp"
        android:layout_height="28dp"
        android:id="@+id/rarityCard"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintRight_toRightOf="@+id/typeCard"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2" />

    <TextView
        android:text="@string/name4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/nameCard"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/imgCard"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toTopOf="@+id/typeCard" />

    <ImageView
        android:layout_width="79dp"
        app:srcCompat="@android:drawable/screen_background_light_transparent"
        android:id="@+id/imgCard"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription=""
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3" />

    <android.support.constraint.Guideline
        android:layout_height="0dp"
        android:id="@+id/guideline"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.12720157"
        tools:layout_editor_absoluteY="65dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_width="360dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="511dp"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_begin="80dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="80dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        app:layout_constraintGuide_begin="118dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="118dp"
        tools:layout_editor_absoluteX="0dp" />
</android.support.constraint.ConstraintLayout>